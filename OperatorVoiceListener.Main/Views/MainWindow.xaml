<Window
    x:Class="OperatorVoiceListener.Main.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:OperatorVoiceListener.Main.Helpers"
    xmlns:local="using:OperatorVoiceListener.Main"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modelsOp="using:ArknightsResources.Operators.Models"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border
            x:Name="AppTitleBar"
            Grid.Row="0"
            VerticalAlignment="Top">
            <TextBlock
                x:Name="AppTitle"
                Margin="11,8,0,6"
                VerticalAlignment="Top"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Operator Voice Listener" />
        </Border>

        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto"
            Grid.Row="1">
            <Frame x:Name="MainFrame" />
        </ScrollViewer>

    </Grid>
</Window>
